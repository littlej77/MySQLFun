@{
    ViewData["Title"] = "Edit Page";
}
@model MySQLFun.Models.Bowler

<div>
    <form method="post">

        <div asp-validation-summary="All" class="text-danger"></div>

        <label asp-for="BowlerFirstName">First Name:</label>
        <input asp-for="BowlerFirstName" />
        <br />

        <label asp-for="BowlerMiddleInit">Middle Initial:</label>
        <input asp-for="BowlerMiddleInit" />
        <br />

        <label asp-for="BowlerLastName">Last Name:</label>
        <input asp-for="BowlerLastName" />
        <br />

        <label asp-for="BowlerAddress">Address:</label>
        <input asp-for="BowlerAddress" />
        <br />

        <label asp-for="BowlerCity">City:</label>
        <input asp-for="BowlerCity" />
        <br />

        <label asp-for="BowlerState">State:</label>
        <input asp-for="BowlerState" />
        <br />

        <label asp-for="BowlerZip">Zip:</label>
        <input asp-for="BowlerZip" />
        <br />

        <label asp-for="BowlerPhoneNumber">Phone:</label>
        <input asp-for="BowlerPhoneNumber" />
        <br />

        <label>Team Name:</label>
        <select asp-for="TeamID" id="teams">
            @foreach (Teams teams in ViewBag.Teams)
            {
                <option value="@teams.TeamID">@teams.TeamName</option>
            }

        </select>

        @*find largest id value and add one to it then pass it in to this page.*@
        <input type="hidden" asp-for="@Model.BowlerID" />
        <input type="hidden" asp-for="@Model.TeamID" />

        <div class="float-end">
            <input class="btn btn-primary" type="submit" value="Submit Reservation" />
        </div>
    </form>

</div>