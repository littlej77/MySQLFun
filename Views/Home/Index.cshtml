<table class="table table-sm table-striped table-bordered">
    <thead class="bold">
        <tr>
            <td>BowlerID</td>
            <td>First Name</td>
            <td>Middle Initial</td>
            <td>Last Name</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zip</td>
            <td>Phone</td>
            <td>Team</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BowlerID</td>
                <td>@b.BowlerFirstName</td>
                <td>@b.BowlerMiddleInit</td>
                <td>@b.BowlerLastName</td>
                <td>@b.BowlerAddress</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>
                <td><a asp-controller="Home" class="btn btn-secondary" asp-action="Teams" asp-route-TeamId="@b.TeamID">Team @b.TeamID</a></td>



                <td><a asp-controller="Home" class="btn btn-info btn-sm" asp-action="Edit" asp-route-BowlerId="@b.BowlerID">Edit</a></td>
                <td><a asp-controller="Home" class="btn btn-info btn-sm" asp-action="Delete" asp-route-BowlerId="@b.BowlerID">Delete</a></td>
            </tr>

        }
    </tbody>
</table>

<form method="get">
    <a asp-controller="Home" class="btn btn-info btn-sm" asp-action="Add" >Add</a>
</form>

